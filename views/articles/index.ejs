<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Blog Website</title>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css"
        integrity="sha384-T3c6CoIi6uLrA9TneNEoa7RxnatzjcDSCmG1MXxSR1GAsXEV/Dwwykc2MPK8M2HN" crossorigin="anonymous">
    <link rel="stylesheet" href="/css/index.css">
    <script src="https://code.jquery.com/jquery-3.6.4.min.js"></script>
</head>

<body>

    <div class="container">
        <h1 class="mt-4 mb-4 text-center">Blog Website</h1>
        <div class="search mb-4">
            <input type="text" id="searchInput" class="form-control" placeholder="Search articles...">
            <button id="searchButton" class="btn btn-primary">Search</button>
        </div>
        <a href="/articles/new" class="btn btn-success create">Create Article</a>

        <h1 class="mt-4">Blogs</h1>
        <div id="searchResults" class="row row-cols-1 row-cols-md-2 row-cols-lg-3 mt-3">
        </div>
        <div id="initial" class="row row-cols-1 row-cols-md-2 row-cols-lg-3 mt-3">
            <% articles.forEach(article=> { %>
                <div class="col mb-4">
                    <div class="card">
                        <a href="articles/<%= article.slug %>" class="card-link">
                            <img src="<%= article.imageURL %>" class="card-img-top" alt="Content Image">
                            <div class="line mt-2 mb-2">
                                <div>
                                    <%= article.author %>
                                </div>
                                <div>
                                    <%= article.createdAt.toLocaleDateString() %>
                                </div>
                            </div>
                            <h5 class="card-title" style="margin: 0;">
                                <%= article.title %>
                            </h5>
                            <p class="desc text-muted">
                                <%= article.description %>
                            </p>
                        </a>
                    </div>
                </div>
                <% }) %>
        </div>
        <br>
    </div>
    <img src="https://encrypted-tbn0.gstatic.com/images?q=tbn:ANd9GcSt49EvTJCTteHeIOBwzF1JHG8rYDxL8L-P-w&usqp=CAU"
        id="scrollTopBtn" alt="top"></img>

    <script src="/script/scrollToTop.js"></script>
    <script src="/script/search.js"></script>

</body>

</html>