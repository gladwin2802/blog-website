<div class="form-group mb-3">
    <label class="text-muted" for="title">Title</label>
    <input id="title" name="title" type="text" value="<%= article.title%>" class="form-control" required>
</div>

<div class="form-group mb-3">
    <label class="text-muted" for="author">Author</label>
    <input id="author" name="author" type="text" value="<%= article.author%>" class="form-control" required>
</div>

<div class="form-group mb-3">
    <label class="text-muted" for="description">Description</label>
    <textarea name="description" id="description" class="form-control"><%= article.description%></textarea>
</div>

<div class="form-group mb-3">
    <label class="text-muted" for="imageURL">Image URL</label>
    <input type="text" value="<%=article.imageURL%>" name="imageURL" class="form-control" required>
</div>

<div class="form-group mb-3">
    <label class="text-muted" for="markdown">Markdown</label><br>
    <textarea name="markdown" id="markdown"><%=article.markdown%></textarea>
</div>

<a href="/" class="btn btn-secondary">Cancel</a>
<button type="submit" class="btn btn-primary">Save</button>
<br><br>


